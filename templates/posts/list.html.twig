{% extends 'base.html.twig' %}

{% block body %}
    <div class="container bg-muted">
        <h1>Hello from list</h1>
        {% for post in posts %}
            <div class="table-responsive" style="width: 1000px;">
                <table class="table table-sm table-hover">
                <thead class="thead-dark">
                    <tr>
                    <th scope="col" style="width: 2%;">#</th>
                    <th scope="col" style="width: 5%;">Author</th>
                    <th scope="col" style="width: 5%;">Title</th>
                    <th scope="col" style="width: 55%;">Body</th>
                    <th scope="col" style="width: 20%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <th scope="row">{{post.id}}</th>
                    <td>{{post.author}}</td>
                    <td>{{post.title}}</td>
                    <td>{{post.body}}</td>
                    <td><button class="bg-info">View</button>
                        <button class="bg-primary">Edit</button>
                        <button class="bg-danger">Delete</button></td>
                    </tr>
                    <tr>
                </tbody>
                </table>
            </div>
        {% endfor %}
    </div>
{% endblock %}