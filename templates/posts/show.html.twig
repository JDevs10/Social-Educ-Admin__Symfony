{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div style="width: 80%;">
            <h1>{{post_detail.title}}</h1>
            {# <label>{{post_detail.date|date('M-d')}}, {{post_detail.date|date('Y')}} by {{post_detail.author}}</label> {{post_detail.date|date('H:i:s')}} #}
            <br>
            <p><img src="{{post_detail.picture}}"></p>
        </div>
        <div>
            <a class="btn bg-info" href="/Social-Educ-Admin/public/posts"><i class="fas fa-undo"></i></a>
            <a class="btn bg-success" href="/Social-Educ-Admin/public/posts/new"><i class="fas fa-plus"></i></a>
            <a class="btn bg-primary" href="edit"><i class="far fa-edit"></i></a>
            <a class="btn bg-danger" href="delete"><i class="far fa-trash-alt"></i></a>
        </div>
    </div>
    
    <div class="row">
        <p style="width: 49%;">Body: {{post_detail.body}}</p>
